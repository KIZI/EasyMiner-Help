font-family = 'Droid Sans', 'Arial', 'sans-serif'

#helpCover
  position fixed
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.9)
  z-index 10

  #helpBox
    position absolute
    top 20px
    width 500px
    min-height 150px
    background-color white
    left 50%
    transform translateX(-50%)
    box-shadow 5px 5px 5px 0 rgba(0,0,0,0.6)
    display none
    h1
      font-family font-family
      font-size 20px
      color #3A86FF
      padding-top 10px
      padding-left 10px
    p
      padding-left 10px
      font-family font-family
    &:hover
      cursor move

  .helpBtn
    height 50px
    width 50px
    background-color #464646
    border none
    outline none
    transition background-color .3s
    &:hover
      &:enabled
        background-color #3A86FF
        cursor pointer
    &:active
      &:enabled
        background-color #D4D4D4

  #helpNextButton
    position absolute
    right 0
    bottom 0
    background-image url(/easyminercenter/_help/img/right.svg)
    background-size 20px 20px
    background-repeat no-repeat
    background-position center
    &:hover
      &:enabled
        animation slideR .3s

  #helpPrevButton
    position absolute
    background-image url(/easyminercenter/_help/img/left.svg)
    background-size 20px 20px
    background-repeat no-repeat
    background-position center
    bottom 0
    left 0
    &:hover
      &:enabled
        animation slideL .3s

  #helpCloseButton
    position absolute
    top 0
    right 0
    width 23px
    height 23px
    border none
    outline none
    cursor pointer

  @keyframes slideR 
      0% 
        background-position center
        animation-timing-function ease-out
      
      50% 
        background-position 150%
        animation-timing-functionn ease-in
      
      51% 
        background-position -50%
        animation-timing-function ease-in
      
      100% 
        background-position center
      


  @keyframes slideL 
      0% 
        background-position center
        animation-timing-function ease-out
      
      50% 
        background-position -50%
        animation-timing-function ease-in
      
      51% 
        background-position 150%
        animation-timing-function ease-in
      
      100% 
        background-position center
      


  #helpNav, #helpNav ul
    margin 0
    padding 0
    list-style-type none
    list-style-position outside
    position absolute
    left 0
    min-height 400px
    top 0
    border none
    box-shadow 0 0 10px 0 rgba(0,0,0,0.4)
    -webkit-box-shadow 0 0 10px 0 rgba(0,0,0,0.4)
    -moz-box-shadow 0 0 10px 0 rgba(0,0,0,0.4)

  #helpNav
    color black
    ul
      position absolute
      display block
      left 0
      width 200px
      overflow-y scroll
      background-color white
      li
        p
          margin 0
          padding 0
          line-height 20px
          font-size 15px
          font-weight normal
          margin-left 20px
      #helpNavTitle
        p
          color #314e64
          font-family font-family
          font-size 20px
          font-weight normal
          margin 5px 20px 15px 20px
          padding-bottom 5px
          border-bottom 1px solid #314e64

  .helpNavline
    color black
    &:hover
      background-color #3A86FF
      cursor pointer
      color white
      
  .currentNavline
    background-color #3A86FF
    color white
      
  .helpNavlist 
    margin-bottom 5px
    p
      color #3A86FF
      margin 5px 20px 15px 20px
    
  #helpContent
    position relative
    width 100%
    margin-bottom 60px

  #helpVideo
    display block
    margin-left auto
    margin-right auto

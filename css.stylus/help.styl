font-family = 'Droid Sans', 'Arial', 'sans-serif'
nav-width = 250px
helpcolor = white

#helpBox
  position fixed
  bottom 20px
  width 500px
  min-height 150px
  background-color helpcolor
  left 50%
  transform translateX(-50%)
  box-shadow 0px 0px 10px 2px rgba(0,0,0,0.6)
  z-index 12
  display none
  h1
    font-family font-family
    font-size 20px
    color #3A86FF
    padding-top 10px
    padding-left 10px
  p
    padding-left 10px
    font-family font-family

  .helpBtn
    width 15px
    background-color #464646
    border none
    outline none
    transition background-color .3s
    &:hover
      &:enabled
        background-color #3A86FF
        cursor pointer
    &:active
      &:enabled
        background-color #D4D4D4

  #helpNextButton
    position absolute
    right -15px
    bottom 0
    height 100%
    background-image url(/easyminercenter/_help/data/sources/img/right.svg)
    background-size 10px 10px
    background-repeat no-repeat
    background-position center
    &:hover
      &:enabled
        animation slideR .2s

  #helpPrevButton
    position absolute
    background-image url(/easyminercenter/_help/data/sources/img/left.svg)
    background-size 10px 10px
    background-repeat no-repeat
    background-position center
    bottom 0
    left -15px
    height 100%
    &:hover
      &:enabled
        animation slideL .2s

  #helpCloseButton
    position absolute
    top 0
    right 0
    width 50px
    height 23px
    border none
    outline none
    cursor pointer
    &:hover
      background-color red
      color white

  #helpHomeButton
    position absolute
    top 0
    right 50px
    width 50px
    height 23px
    border none
    outline none
    cursor pointer
    background-image url(/easyminercenter/_help/data/sources/img/home_black.png)
    background-size 15px 15px
    background-repeat no-repeat
    background-position center
    &:hover
      background-color #3A86FF
      background-image url(/easyminercenter/_help/data/sources/img/home_white.png)
      
      
  @keyframes slideR 
      0% 
        background-position center
        animation-timing-function ease-out
      
      50% 
        background-position 200%
        animation-timing-functionn ease-in
      
      51% 
        background-position -100%
        animation-timing-function ease-in
      
      100% 
        background-position center
      


  @keyframes slideL 
      0% 
        background-position center
        animation-timing-function ease-out
      
      50% 
        background-position -100%
        animation-timing-function ease-in
      
      51% 
        background-position 200%
        animation-timing-function ease-in
      
      100% 
        background-position center
        
   #helpContent
    position relative
    width 100%
    margin-bottom 20px
    p
      padding-left 10px
      padding-right 10px
    a
      &:hover
        cursor pointer
    .helpWelcomeHref
      margin 0 
      padding 0
      text-align center
      display block

  #helpVideo
    display block
    margin-left auto
    margin-right auto

#helpCover
  position fixed
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.8)
  z-index 10
#helpCover2
  position fixed
  top 0
  width 100%
  height 100%
  z-index 12

#helpNav 
  position fixed
  bottom 20px
  left 20px
  width nav-width
  min-height 50px
  background-color helpcolor
  box-shadow 0px 0px 10px 2px black
  z-index 100
  h2
    color #314e64
    font-family font-family
    font-size 20px
    font-weight normal
    margin 5px 20px 15px 20px
    padding-bottom 5px
    border-bottom 1px solid #314e64

  #helpMinButton
    position absolute
    right 0
    top 0
    width 50px
    height 23px
    border none
    outline none
    &:hover
      background-color #3A86FF
      color white
      cursor pointer
    
  #helpNavContent
    width nav-width
  
    .helpUl
      list-style none
      color black
      padding 0
      margin 0
    
    .helpLi
      margin 0
      padding 0
      h3
        margin 0
        padding 0
        display block
        font-family font-family
        padding-left 20px
        margin-bottom 10px
        color #3A86FF
        font-size 18px
        line-height 25px
        &:hover 
          cursor pointer
          box-shadow inset 0 0 5px #3A86FF
        span
          position absolute
          right 0
          padding-right 20px
      ul  
        list-style none
        margin 0
        padding 0
        display none
        .helpNavline
          display block
          margin 0
          padding 0
          margin-bottom 7px
          width nav-width
          background-color #D1D1D1
          &:hover 
            background-color #3A86FF
            color white
            cursor pointer
            p
              color white
          p
            color black
            margin 0
            padding-left 20px
            font-size 12px
            &:hover 
              text-decoration none
        .currentNavline
          background-color #3A86FF
          p
            color white

.helpHighlighted
  position relative
  z-index 11
  opacity 0.01
  color white !important
  
.helpColored 
  position relative
  z-index 11
  opacity 0.01
  background-color #63FE44 !important

  
          
        
         
   
 